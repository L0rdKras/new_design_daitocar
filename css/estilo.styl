@import 'nib/vendor'

@import 'nib/gradients'

body
	.contenedor
		.cajas
			height 800px
			width 1000px
			background-color red
			margin 20px			
	nav
		background-color black
		height 61px
		.menu
			margin 0
			width 100%
			background-color rgb(0,0,0)
			opacity 0.7
			h1
				margin 10px 0 0 5px
				padding 0
				color white
				display inline-block
				vertical-align top					
			img
				margin-top .3em
				display inline-block
				width 50px
				height 50px
			ul		
				display inline
				vertical-align top
				float right
				.item
					display inline-block
					padding .3em
					border-right solid 1px white				
					margin 0 .1em
					a
						color white
						text-decoration none			
