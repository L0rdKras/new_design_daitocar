@import 'nib/vendor'
@import 'iconos.styl'
@import 'iconos_redes.styl'

@import 'nib/gradients'

cayene= #e46764
rojo= #d81e05 //216,30,5
paloma= #aab1b0 //70,177,176
dazzling_blue= #006bb6
azul= #003f87 //0, 63, 135
celosia= #f47d44 //244,125,65

@font-face {
	font-family: 'Concielian'
	src:url('fuentes/ConcielianAlpha.TTF') format('truetype');
	font-weight: bold;
	font-style: normal;
}
@font-face {
	font-family: 'goodtime'
	src:url('fuentes/GOODTIME.TTF') format('truetype');
	font-weight: bold;
	font-style: normal;
}


html
	//background linear-gradient(135deg, dazzling_blue 0%,azul 100%);
	body
		.delimitador
			.contenedor			
				.area_noticias					
					padding-top 1em
					.noticia						
						width 80%
						background-color rgba(216,30,5, .8)
						padding 1em
						margin 0 auto 1em auto
						.imagen_noticia
							width 90%
							margin 0 auto
							img
								width 100%
						.titular
							border-bottom solid 1px white
							font-size 18px
							font-weight bold
							color white
							a
								text-decoration none
								color white
						.fecha
							color white
							font-size 12px
				.contenedor_video
					display none
					background-color rgba(0, 63, 135, .9)
					margin-bottom 10px
					.muestra_video
						display inline-block
						padding 1em							
					.texto_video
						width 240px
						margin-top 1em						
						padding 1em
						display inline-block
						background-color rgba(92, 92, 92, .8)
						color white
						vertical-align top
						.titulo_video
							border-bottom solid 1.5px white
							margin-bottom 10px
							
							h4
								display inline-block
								vertical-align top
								margin-top 15px
								margin-bottom 0
								font-family 'goodtime'
								font-size 18px
							img
								display inline-block
								width 30px
								height 30px
				.cuerpo_noticia
					padding 1em
					background-color rgba(240,240,240, 0.6)
					h2
						border-bottom 1px solid black
						font-size 28px
			header
				z-index 0
				position relative
				border-bottom 30px solid rojo
				img
					width 100%
					margin 0
				.titulo_header
					font-family 'goodtime'
					padding 0 0 0 1em
					background-color #fff
					color #000
					opacity .7
					//position absolute
					//width 70%
					bottom 5%
					left 0%
					#marca
						//display none
						h1
							margin 0
					h3
						margin 0
		footer
			position relative
			padding 2em
			background-color paloma//rgb(90, 90, 90)
			color rgb(50, 50, 50)
			border-top 30px solid rojo
			.datos_contacto
				display inline-block
				ul
					list-style none	
					.info
						font-size 14px
						border-bottom solid 1px rgb(50, 50, 50)
						a
							text-decoration none
							color rgb(50, 50, 50)
			#logo_pie
				padding 1em 0
				position absolute
				top -20%
				left 42%
				img
					width 60px
					height 60px
			#redes_sociales
				display inline-block
				vertical-align top
				text-align center
				#lista_redes
					vertical-align top
					list-style none	
					display inline-block		
					a
						text-decoration none
						font-size 25px
						color rgb(50, 50, 50)
		.contenedor_nav
			background-color rojo//cayene
			height 61px	
			border-bottom 30px solid paloma		
			.menu
				z-index 100
				position fixed
				margin 0
				width 100%
				background-color rgba(216,30,5, 0.6)
				h1
					display none
					margin 15px 0 0 5px
					padding 0
					color white
					//display inline-block
					vertical-align top	
					font-family 'goodtime'				
				img
					margin-top .3em
					display inline-block
					padding-left 1em
					width 50px
					height 50px
				.lista_menu		
					display none
					vertical-align top
					float right
					margin 1em 0
					.item
						font-size 15px
						display inline-block
						padding .2em
						border-right solid 2px white						
						border-radius 20px				
						margin 0 .1em
						a
							color white
							text-decoration none
							font-weight bold
				.menu_movil
					margin-top .3em
					display inline-block
					//display none
					float right
					font-size 40px			
					vertical-align top
					a
						color white
						text-decoration none
//@media screen and (min-width: 320px)


@media screen and (min-width: 480px)
	html
		body
			footer
				#logo_pie
					top -30%
					left 45%

@media screen and (min-width: 640px)
	html
		body			
			footer
				#redes_sociales
					float right


@media screen and (min-width: 768px)
	html
		body
			.contenedor_nav
				.menu
					h1
						display inline-block
					img 
						padding-left .5em
					.lista_menu
						display inline-block
					.menu_movil
						display none
			.delimitador
				.contenedor			
					.area_noticias
						.noticia
							display inline-block
							width 45%
							//margin-right 1%
				header
					.titulo_header
						position absolute
						padding 1.5em


@media screen and (min-width: 1024px)
	html
		background url(imagenes_css/fondo-motor.jpg) no-repeat fixed center
		background-size cover
		body
			.contenedor_nav
				.menu
					width 95%
					padding 0 2.5%
					.lista_menu
						.item
							font-size 16px
			.delimitador
				width 95%
				margin 0 auto 0 auto
				.contenedor
					.contenedor_video
						display block
						.texto_video
							.titulo_video
								img
									display none


@media screen and (min-width: 1280px)
	html
		body
			.delimitador
				.contenedor
					.area_noticias
						.noticia
							width 30%
							vertical-align top
					.contenedor_video
						.texto_video
							width 30%
							.titulo_video
								img
									display inline-block
