@import 'nib/vendor'

@import 'nib/gradients'


html
	background url(imagenes_css/fondo.png) no-repeat fixed center
	background-size cover
	body
		.delimitador
			width 1000px
			margin 0 auto 0 auto
			.contenedor			
				/*video
					display none*/
		footer
			padding 2em
			background-color grey
			.datos_contacto
				display inline-block
				ul
					list-style none	
					.info
						font-size 14px
						border-bottom solid 1px black
						a
							text-decoration none
		header
			img
				width 100%
			.titulo_header				
				padding 1em
				background-color #000
				color white
				opacity .9
				position absolute
				bottom 40%
				left 15%
		nav
			background-color black
			height 61px
			.menu
				margin 0
				width 100%
				background-color rgb(0,0,0)
				opacity 0.9
				h1
					margin 10px 0 0 5px
					padding 0
					color white
					display inline-block
					vertical-align top					
				img
					margin-top .3em
					display inline-block
					width 50px
					height 50px
				ul		
					display inline
					vertical-align top
					float right
					.item
						display inline-block
						padding .3em
						border-right solid 1px white				
						margin 0 .1em
						a
							color white
							text-decoration none
							font-weight bold			
